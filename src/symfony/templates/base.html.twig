{# templates/layouts/base.html.twig #}
<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Your CMS - Empowering Content Management{% endblock %}</title>
    {% block css %}
    <link rel="stylesheet" href="{{ asset('dist/css/styles.css') }}">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
</head>

<body class="bg-gray-100 font-sans">
    {% block aside %}
    {% include './admin/components/aside.html.twig' %}
    {% endblock %}
    {% block header %}
    {% include './admin/components/header.html.twig' %}
    {% endblock %}
    {% block body %}
    {% block content %}
    {% endblock %}
    {% endblock %}
    {% block footer %}
    {% include './admin/components/footer.html.twig' %}
    {% endblock %}

    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    {% block js %}

    {% endblock %}
</body>
</html>
