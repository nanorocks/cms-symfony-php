{# app/Resources/views/blog/index.html.twig #}
{% extends 'base.html.twig' %}

{# the following is valid #}
{% block content %}
<div class="bg-gray-100 flex items-center justify-center h-screen">

<div class="w-full max-w-md bg-white p-8 rounded shadow-md">
    <h2 class="text-2xl font-semibold mb-4">Forgot Your Password?</h2>
    <p class="text-gray-600 mb-6">Enter your email address and we'll send you instructions to reset your password.</p>
    <form>
        <div class="mb-4">
            <label for="email" class="block text-gray-600 text-sm mb-2">Email</label>
            <input type="email" id="email" name="email" class="w-full p-2 border rounded-sm text-gray-700 focus:outline-none focus:border-blue-500">
        </div>
        <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded hover:bg-blue-600 focus:outline-none">Send Reset Instructions</button>
    </form>
    <p class="text-gray-600 text-sm mt-4">Remember your password? <a href="#" class="text-blue-500 hover:underline">Log In</a></p>
</div>
</div>

{% endblock %}