{# app/Resources/views/blog/index.html.twig #}
{% extends 'base.html.twig' %}

{# the following is valid #}
{% block content %}
<div class="bg-gray-100 flex items-center justify-center h-screen">
<div class="w-full max-w-md bg-white p-8 rounded shadow-md">
    <h2 class="text-2xl font-semibold mb-4">Reset Your Password</h2>
    <form>
        <div class="mb-4">
            <label for="password" class="block text-gray-600 text-sm mb-2">New Password</label>
            <input type="password" id="password" name="password" class="w-full p-2 border rounded-sm text-gray-700 focus:outline-none focus:border-blue-500">
        </div>
        <div class="mb-4">
            <label for="confirm-password" class="block text-gray-600 text-sm mb-2">Confirm New Password</label>
            <input type="password" id="confirm-password" name="confirm-password" class="w-full p-2 border rounded-sm text-gray-700 focus:outline-none focus:border-blue-500">
        </div>
        <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded hover:bg-blue-600 focus:outline-none">Reset Password</button>
    </form>
    <p class="text-gray-600 text-sm mt-4">Remember your password? <a href="#" class="text-blue-500 hover:underline">Log In</a></p>
</div>
</div>

{% endblock %}